{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "@playwright/test"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "public/*": ["public/*"]
    }
  },
  "include": ["src", "features", "public"]
}
