{
  "name": "junie-explorer",
  "version": "3.4.1",
  "author": "Dave Meehan <dave_meehan@replicated.co.uk>",
  "license": "SEE LICENSE IN LICENCE",
  "description": "Utility App for drilling into log files for JetBrains Junie",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run dev",
    "dev": "bun install && bun run build:css && bun run build:static && bun src/index.ts",
    "test": "bunx playwright test",
    "test:ui": "bunx playwright test --ui",
    "playwright:install": "bunx playwright install",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/app.css",
    "build:version": "sed -n 's/.*\"version\": \"\\(.*\\)\",/\"\\1\"/p' package.json > public/version.txt",
    "build:worker": "bun build src/workers/loadEventsWorker.ts --outfile public/loadEventsWorker.js --target bun",
    "build:vfs": "bun run build:version && make-vfs --dir ./public --content-format string --outfile ./src/bun/public.ts",
    "build:static": "bun run build:worker && bun run build:vfs",
    "build:bun": "bun build --compile --minify --sourcemap src/index.ts",
    "build:apple:x64": "bun run build:bun --target=bun-darwin-x64 --outfile dist/junie-explorer-apple-x64",
    "build:apple:arm64": "bun run build:bun --target=bun-darwin-arm64 --outfile dist/junie-explorer-apple-arm64",
    "build:linux:x64": "bun run build:bun --target=bun-linux-x64 --outfile dist/junie-explorer-linux-x64",
    "build:linux:arm64": "bun run build:bun --target=bun-linux-arm64 --outfile dist/junie-explorer-linux-arm64",
    "build:windows:x64": "bun run build:bun --target=bun-windows-x64 --outfile dist/junie-explorer-windows-x64",
    "build": "bun install && bun run build:static && bun run build:apple:x64 && bun run build:apple:arm64 && bun run build:linux:x64 && bun run build:linux:arm64 && bun run build:windows:x64"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.11",
    "@kitajs/ts-html-plugin": "^4.1.3",
    "@tailwindcss/cli": "^4.1.17",
    "@types/bun": "^1.3.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/semver": "^7.7.1",
    "cookie-parser": "^1.4.7",
    "diff": "^8.0.2",
    "express": "^4.21.2",
    "fs-extra": "^11.3.2",
    "marked": "^15.0.12",
    "mime-types": "^3.0.2",
    "semver": "^7.7.3",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^4.17.25",
    "@types/fs-extra": "^11.0.4",
    "@types/marked": "^5.0.2",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.19.1",
    "daisyui": "^5.5.5",
    "make-vfs": "^1.0.16",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3"
  },
  "private": true
}
